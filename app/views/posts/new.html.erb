<div id="post-header">
	<h1 id='post-title'>Title of Your Guide</h1>
	<% form_for Post.new , :html=>{:class=>"post_title"} do |f| %>
		<%= f.text_field :title  %>
			<input type="hidden" id="secret_key" name="post_secret_key" value="<%= @post_secret_key %>" />
			<input type="hidden" class="post_owner" name="post_owner" value="<%= current_user.id %>" />
