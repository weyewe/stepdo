<% form_for step, :html=>{:class=>"new_step_title"} do |f| %>
	<%= f.text_field :title , :id => ""%>
		<input type="hidden" class="secret_key" name="post_secret_key" value="<%= step.post.uuid %>" />
		<input type="hidden" class="post_owner" name="post_owner" value="<%= current_user.id %>" />
		<input type="hidden" class="order" name="step[order]" value="<%= step.order %>" />
	<%= submit_tag "Done" %>
<% end %>